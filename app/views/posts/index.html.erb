<% content_for(:title, t(".title")) %>
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <h1 class="text-center mb-5"><%= t(".title") %></h1>
      <div class="mb-5 text-center d-grid gap-2 col-3 mx-auto">
        <%= link_to t(".new_post"), new_post_path, class: "btn btn-success rounded-pill" %>
      </div>
      <!-- 検索フォーム -->
    </div>
  </div>

  <hr size="10", class="bg-success border border-0 mb-4">

  <!-- 投稿一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row mb-4">
        <% if @posts.present? %>
          <%= render partial: "post", collection: @posts %>
        <% else %>
          <p><%= t(".no_result") %></p>
        <% end %>
      </div>
      <%= paginate @posts, theme: "bootstrap-5", nav_class: "d-inline-block", pagination_class: "flex-wrap justify-content-start" %>
    </div>
  </div>
</div>
