<% if diagnosis.calculate >= 0 && diagnosis.calculate < 25 %>
  <div class="col-sm align-self-end mb-3 mb-sm-0">
    <div class="progress" role="progressbar" aria-label="result-progress" aria-valuenow="<%= diagnosis.calculate %>" aria-valuemin="0" aria-valuemax="100" style="height: 40px">
      <div class="progress-bar bg-warning" style="width: <%= diagnosis.calculate %>%"></div>
    </div>
  </div>
  <div class="col-sm">
    <div class="text-center">
      <%= image_tag "hedgehog_progress0.png", class: "img-fluid" %>
    </div>
  </div>
