<turbo-frame>
  <turbo-stream action="update" target="page-title">
    <% content_for(:title, t(".title")) %>
  </turbo-stream>
</turbo-frame>
<div data-controller="post-search">
  <div class="container mt-5 mb-5 min-vh-100">
    <div class="row">
      <div class="col-lg-10 offset-lg-1">
        <h1 class="text-center text-main-color"><%= t(".title") %></h1>        
      </div>
    </div>
    <hr size="10", class="bg-main-color border border-0 mt-0 mb-4">
    <!-- 投稿一覧 -->
    <div class="row">
      <div class="col-12">
        <div class="row">
          <% if @posts.present? %>
            <%= render partial: "posts/post", collection: @posts %>
          <% else %>
            <p><%= t(".no_result") %></p>
          <% end %>
        </div>
        <%= render "shared/pagination", objects: @posts %>
      </div>
    </div>
  </div>
  <%= render "posts/post_control_panel" %>
</div>
