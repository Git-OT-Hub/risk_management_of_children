<%= search_form_for q, url: url do |f| %>
  <div class="d-flex flex-column flex-md-row grid gap-1">
    <%= f.search_field :title_cont, class: "form-control", placeholder: t("defaults.message.search_title") %>
    <%= f.search_field :body_cont, class: "form-control", placeholder: t("defaults.message.search_body") %>
    <div class="input-group">
      <%= f.search_field :comments_body_cont, class: "form-control", placeholder: t("defaults.message.search_comment") %>
      <%= f.submit t("defaults.message.search"), class: "btn btn-outline-success" %>
    </div>
  </div>
<% end %>
