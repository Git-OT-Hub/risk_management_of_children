<div class="shadow-lg bg-body rounded-4 p-4 mb-5">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <%= form_with model: diagnosis do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label visually-hidden" %>
          <%= f.text_field :title, class: "form-control rounded-pill bg-warning bg-opacity-10 border border-0", placeholder: "#{t("diagnosis_questions.result.input_title")}" %>
        </div>
        <div class="float-end">
          <%= f.submit class: "btn btn-success rounded-pill fs-5" %>
          <%= link_to t("defaults.message.cancel"), "", class: "" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
