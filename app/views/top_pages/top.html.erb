<turbo-frame>
  <turbo-stream action="update" target="page-title">
    <% content_for(:title, "") %>
  </turbo-stream>
</turbo-frame>
<div class="container">
  <div class="row">
    <div class="col-sm-7">
      <h2>タイトル</h2>
      <p>説明文</p>
    </div>
    <div class="col-sm-5">
      <%= image_tag "sample2.png", size: "300x200" %>
    </div>
  </div>

  <!-- テスト領域 -->
  <div class="row">
    <div class="col-12">
      <ul class="list-group">
        <% @diagnosis_contents.each do |content| %>
          <li class="list-group-item"><%= link_to content.title, diagnosis_content_path(content) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
