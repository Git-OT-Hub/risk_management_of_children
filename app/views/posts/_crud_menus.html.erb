<ul class="crud-menu-btn list-inline float-start">
  <li class="list-inline-item">
    <%= link_to edit_post_path(post), id: "button-edit-#{post.id}" do %>
      <i class="fa-regular fa-pen-to-square"></i>
    <% end %>
  </li>
  <li class="list-inline-item">
    <%= link_to post_path(post), data: { turbo_method: :delete, turbo_confirm: t("defaults.message.delete_confirm") }, id: "button-delete-#{post.id}" do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>
  </li>
</ul>
