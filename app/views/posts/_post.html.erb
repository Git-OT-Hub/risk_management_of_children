<div class="col-12 col-sm-6 col-lg-4 mb-4">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <%= image_tag "sample1.png", class: "card-img-top", size: "300x200" %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
        <p class="card-text"><%= post.body %></p>
      </div>
    </div>
  </div>
</div>
