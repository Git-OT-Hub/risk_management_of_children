<%= link_to favorite_path(post.favorites.find { |b| b.user_id == current_user.id }), data: { turbo_method: :delete }, class: "link-danger link-underline link-underline-opacity-0", id: "button-remove-favorite-#{post.id}" do %>
  <span class="icon-shadow-common">
    <i class="fa-solid fa-heart fa-xl"></i>
    <%= post.favorites_count %>
  </span>
<% end %>
