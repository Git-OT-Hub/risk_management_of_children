<p style="color: green"><%= notice %></p>
<div class="container text-center">
  <!-- 投稿一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <h1><%= t(".title") %></h1>
        <p><%= link_to t(".new_post"), new_post_path %></p>
        <% if @posts.present? %>
          <%= render partial: "post", collection: @posts %>
        <% else %>
          <p><%= t(".no_result") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
