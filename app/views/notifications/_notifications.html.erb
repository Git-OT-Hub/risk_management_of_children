<%= turbo_frame_tag "notifications" do %>
  <% if @notifications.present? %>
    <%= link_to t("notifications.index.start_mark_all_notifications"), mark_all_as_read_notifications_path, data: { turbo_method: :patch, turbo_confirm: t("defaults.message.mark_all_notifications") }, class: "btn btn-outline-secondary btn-sm ms-2 mb-2" %>
    <%= render partial: "notifications/notification", collection: @notifications %>
  <% else %>
    <p class="text-break p-2 mb-0"><%= t("notifications.index.no_notification") %></p>
  <% end %>
<% end %>
