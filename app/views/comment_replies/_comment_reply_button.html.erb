<div class="sticky-bottom bg-body bg-opacity-50" id="<%= dom_id(CommentReply.new) %>">
  <div class="container px-4 mb-5 pt-2">
    <div class="row">
      <div class="col-12 px-0 text-end mb-4">
        <%= link_to "javascript:void(0)", class: "link-success link-underline link-underline-opacity-0", data: { action: "click->scroll-page#topPage" } do %>
          <i class="fa-regular fa-circle-up fa-3x"></i>
        <% end %>
      </div>
      <div class="col-12 px-0 text-end">
        <%= link_to "javascript:void(0)", class: "link-success link-underline link-underline-opacity-0", data: { action: "click->scroll-page#endPage" } do %>
          <i class="fa-regular fa-circle-down fa-3x"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container px-4" style="min-height: 100px;">
    <div class="row justify-content-between">
      <div class="col-2 px-0 text-start">
        <%= link_to "javascript:history.back()", class: "link-success link-underline link-underline-opacity-0" do %>
          <i class="fa-solid fa-reply fa-3x"></i>
        <% end %>
      </div>
      <div class="col-2 px-0 text-end">  
        <%= link_to new_comment_comment_reply_path(comment), data: { turbo_stream: true }, class: "link-success link-underline link-underline-opacity-0" do %>
          <i class="fa-solid fa-circle-plus fa-3x"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
