<%= form_with model: comment, url: [post, comment] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="mb-3">
    <%= f.label :body, class: "form-label" %>
    <%= f.text_area :body, class: "form-control rounded-4 mb-3", rows: 4, placeholder: Comment.human_attribute_name(:body) %>
  </div>
  <div class="card mb-3">
    <div class="row g-0 justify-content-center">
      <div class="col-sm-7">
        <div class="card-body p-2">
          <%= f.label :comment_image, class: "form-label" %>
          <div class="form-text mb-1"><%= t("defaults.message.comment_image_quantity_limit") %></div>
          <div class="form-text mb-1"><%= t("defaults.message.byte_size_limit") %></div>
          <div class="form-text mb-3"><%= t("defaults.message.content_type_limit") %></div>
          <%= f.file_field :comment_image, direct_upload: true, accept: "image/*", class: "form-control rounded-pill" %>
        </div>
      </div>
      <div class="col-sm-4 align-self-center ms-0">
        <div class="card-body p-1">
          <%= image_tag "no_image.png", class: "img-fluid rounded" %>
        </div>
      </div>
    </div>
  </div>
  <div class="mb-3">
    <ul class="list-inline float-end">
      <li class="list-inline-item me-4 mb-2">
        <%= f.submit class: "btn btn-success rounded-pill" %>
      </li>
      <li class="list-inline-item">
        <% if comment.new_record? %>
          <%= link_to t("defaults.message.cancel"), cancel_new_comment_post_comments_path(post), data: { turbo_stream: true }, class: "btn btn-outline-secondary rounded-pill" %>
        <% else %>
          <%= link_to t("defaults.message.cancel"), "", class: "btn btn-outline-secondary rounded-pill" %>
        <% end %>
      </li>
    </ul>
  </div>
<% end %>
